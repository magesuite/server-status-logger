<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="server_status_logger" translate="label" type="text" sortOrder="1300" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Server status logger</label>
                <field id="cron_schedule" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Cron Schedule</label>
                    <comment><![CDATA[Specifies when automatic logging will happen. Please type full cron schedule expression, eg. '59 23 * * *'. Type non existing date like '* * 31 2 *' to disable the feature.]]></comment>
                    <frontend_class>cs-csfeature__logo</frontend_class>
                </field>
                <field id="logging_retention_period" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Logging retention period</label>
                    <comment>How long (in days) logs should be kept</comment>
                    <validate>validate-number validate-length maximum-length-4 validate-positive-number</validate>
                    <frontend_class>cs-csfeature__logo</frontend_class>
                </field>
                <fieldset_css>cs-csfeature__logo</fieldset_css>
            </group>
        </section>
    </system>
</config>
